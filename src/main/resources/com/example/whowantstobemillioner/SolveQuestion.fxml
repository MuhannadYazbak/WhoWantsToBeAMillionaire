<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.whowantstobemillioner.SolveQuestionController">
   <children>
      <VBox layoutX="233.0" layoutY="56.0" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Label fx:id="questionText" text="Question">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
            <GridPane>
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Button fx:id="answer1" mnemonicParsing="false" onMouseClicked="#answerClicked" text="Answer 1" />
                  <Button fx:id="answer2" layoutX="10.0" layoutY="13.0" mnemonicParsing="false" onMouseClicked="#answerClicked" text="Answer 2" GridPane.columnIndex="1" />
                  <Button fx:id="answer3" layoutX="10.0" layoutY="13.0" mnemonicParsing="false" onMouseClicked="#answerClicked" text="Answer 3" GridPane.rowIndex="1" />
                  <Button fx:id="answer4" layoutX="10.0" layoutY="43.0" mnemonicParsing="false" onMouseClicked="#answerClicked" text="Answer 4" GridPane.columnIndex="1" GridPane.rowIndex="1" />
               </children>
            </GridPane>
         </children>
      </VBox>
   </children>
</AnchorPane>
